{
  "name": "beat-gen",
  "version": "2.0.0",
  "description": "Full track generator: drums + bass + melody + pads with arrangements, MIDI export, and PNG visualization",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "beat-gen": "./bin/beat-gen.js"
  },
  "scripts": {
    "test": "node --test test/**/*.test.js",
    "test:unit": "node --test test/unit/*.test.js",
    "test:integration": "node --test test/integration/*.test.js",
    "test:naming": "node tests/test-sample-naming.js && node tests/test-elevenlabs-naming.js",
    "test:all": "npm test && npm run test:naming",
    "test:watch": "node --test --watch test/**/*.test.js"
  },
  "keywords": [
    "drums",
    "beat",
    "midi",
    "cli",
    "music",
    "11labs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@inquirer/prompts": "^8.2.0",
    "@napi-rs/canvas": "^0.1.91",
    "@tonejs/midi": "^2.0.28",
    "audiobuffer-to-wav": "^1.0.0",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "fluent-ffmpeg": "^2.1.3",
    "node-fetch": "^3.3.2"
  }
}
